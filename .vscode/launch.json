{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Local: Mlflow server",
            "type": "python",
            "request": "launch",
            "module": "mlflow",
            "env": {
                "MLFLOW_AUTH_CONFIG_PATH": "backend/srv/auth_config.ini",
                "MLFLOW_OIDC_LOG_LEVEL": "DEBUG",
            },
            "args": [
                "server",
                "--artifacts-destination=/mlruns",
                "--host=0.0.0.0",
                "--port=5000",
                "--workers=1",
                "--app-name=basic-auth",
                "--dev"
            ],
            "jinja": true,
            "justMyCode": true
        },
    ]
}